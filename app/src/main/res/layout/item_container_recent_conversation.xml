<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:padding="@dimen/_8sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_con_recent_profile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_image"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/iv_item_con_recent_profile"
        android:layout_toStartOf="@+id/iv_item_con_recent_profile"
        android:layout_toEndOf="@+id/iv_item_con_recent_profile" />


    <TextView
        android:id="@+id/tv_item_con_rec_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_toStartOf="@+id/viewSupporter"
        android:layout_toEndOf="@+id/iv_item_con_recent_profile"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/tv_item_con_recent_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/viewSupporter"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_toEndOf="@+id/iv_item_con_recent_profile"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/_8sdp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>